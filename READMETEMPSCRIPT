  function questionone() {
    var nickname = prompt("Which of the following is NOT one of my nicknames? ('Tiger','Grizzly')");
      if (nickname === 'Tiger' || 'tiger') {
        alert("Correct - I'm a bear not a tiger");
      }
      else {
        alert("Wrong-O");
      }
  }





