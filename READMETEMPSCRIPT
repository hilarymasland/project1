function questionthree() {
  var movie = prompt("True or False: My favorite move is Titanic.");
    if (movie === 'True') {
      alert("Correct- I'll never let go");
    }
    else {
      alert("Com'on - I thought it was obvious");
    }
}

questionfour()
function questionfour() {
  var broadway = prompt("True or False: There are few things I love more than Broadway Musicals.");
    if (broadway === 'True') {
      alert("Correct- If only I could sing....");
    }
    else {
      alert("Cats, Phantom, Les Miz...*swoon*");
    }
}



